# BURNI TOKEN WEBSITE - NETLIFY HEADERS
/*
  # Globale SEO-Anweisung: Alle Seiten indexieren und Links folgen.
  # Dies überschreibt alle widersprüchlichen oder fehlerhaften "noindex"-Header.
  X-Robots-Tag: all

  # Allgemeine Sicherheits-Header
  X-Frame-Options: DENY
  X-Content-Type-Options: nosniff
  Referrer-Policy: strict-origin-when-cross-origin

  # Vereinfachte Content-Security-Policy zur Fehlerbehebung
  Content-Security-Policy: upgrade-insecure-requests; default-src 'self' https:; script-src 'self' 'unsafe-inline' https:; style-src 'self' 'unsafe-inline' https:; img-src 'self' data: https:; font-src 'self' https:; connect-src 'self' https: wss:;

/sitemap.xml
  # Stellt sicher, dass die Sitemap als XML-Datei erkannt wird.
  Content-Type: application/xml
  # Weist Google an, die Sitemap regelmäßig neu abzurufen (alle 1 Stunde).
  Cache-Control: public, max-age=3600

/assets/*
  Cache-Control: public, max-age=31536000, immutable
*/
