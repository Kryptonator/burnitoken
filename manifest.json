{
    "name": "Burni Token - Deflationary XRPL Token",
    "short_name": "Burni",
    "description": "Deflationary cryptocurrency on XRPL creating value through scarcity",
    "lang": "en",
    "icons": [
        {
            "src": "/assets/images/favicon-16x16.png",
            "sizes": "16x16",
            "type": "image/png",
            "purpose": "any"
        },
        {
            "src": "/assets/images/favicon-32x32.png",
            "sizes": "32x32",
            "type": "image/png",
            "purpose": "any"
        },
        {
            "src": "/assets/images/apple-touch-icon.png",
            "sizes": "180x180",
            "type": "image/png",
            "purpose": "any maskable"
        },
        {
            "src": "/assets/images/burni-logo.png",
            "sizes": "192x192",
            "type": "image/png",
            "purpose": "any"
        },
        {
            "src": "/assets/images/burni-logo.webp",
            "sizes": "512x512", 
            "type": "image/webp",
            "purpose": "any maskable"
        }
    ],
    "start_url": "/?source=pwa",
    "scope": "/",
    "id": "burni-token-app",
    "display": "standalone",
    "display_override": ["standalone", "minimal-ui"],
    "theme_color": "#f97316",
    "background_color": "#ffffff",
    "orientation": "portrait-primary",
    "categories": ["finance", "business", "productivity"],
    "shortcuts": [
        {
            "name": "View Token Schedule",
            "short_name": "Schedule",
            "description": "View the deflationary burn schedule",
            "url": "/?shortcut=schedule#token-schedule",
            "icons": [
                {
                    "src": "/assets/images/burni-chart.webp",
                    "sizes": "96x96",
                    "type": "image/webp"
                }
            ]
        },
        {
            "name": "Trading",
            "short_name": "Trade",
            "description": "Trade Burni tokens",
            "url": "/?shortcut=trade#interact",
            "icons": [
                {
                    "src": "/assets/images/exchange.webp",
                    "sizes": "96x96",
                    "type": "image/webp"
                }
            ]
        },
        {
            "name": "Community",
            "short_name": "Community",
            "description": "Join the Burni community",
            "url": "/?shortcut=community#community",
            "icons": [
                {
                    "src": "/assets/images/burni.png",
                    "sizes": "96x96",
                    "type": "image/png"
                }
            ]
        },
        {
            "name": "Live Prices",
            "short_name": "Prices",
            "description": "View real-time price data",
            "url": "/?shortcut=prices#price-data",
            "icons": [
                {
                    "src": "/assets/images/burnicoin.jpg",
                    "sizes": "96x96",
                    "type": "image/jpeg"
                }
            ]
        }
    ],
    "share_target": {
        "action": "/share-target/",
        "method": "GET",
        "params": {
            "title": "title",
            "text": "text",
            "url": "url"
        }
    },
    "protocol_handlers": [
        {
            "protocol": "web+burni",
            "url": "/?action=%s"
        }
    ],
    "prefer_related_applications": false,
    "edge_side_panel": {
        "preferred_width": 400
    },
    "launch_handler": {
        "client_mode": "focus-existing"
    }
}