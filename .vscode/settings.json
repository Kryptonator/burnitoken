{
  "tailwindCSS.includeLanguages": {
    "html": "html",
    "javascript": "javascript",
    "css": "css"
  },
  "prettier.enable": true,
  "prettier.singleQuote": true,
  "prettier.semi": true,
  "prettier.tabWidth": 2,
  "liveServer.settings.donotShowInfoMsg": true,
  "liveServer.settings.donotVerifyTags": true,
  "liveServer.settings.port": 3000,
  "html.validate.scripts": true,
  "html.validate.styles": true,
  "css.validate": true,
  "accessibility.focusVisible": true,
  "accessibility.reduceMotion": "auto",
  "git.enableSmartCommit": true,
  "git.autofetch": true,
  "git.confirmSync": false,
  "github.copilot.enable": {
    "*": true,
    "yaml": false,
    "plaintext": false
  },
  "markdown.preview.fontSize": 14,
  "markdown.preview.lineHeight": 1.6,
  "extensions.autoUpdate": true,
  "task.allowAutomaticTasks": "on",
  "extensions.ignoreRecommendations": false,
  "prettier.requireConfig": true,
  "prettier.htmlWhitespaceSensitivity": "css",
  "eslint.rules.max-len": "off",
  "snyk.advanced.organization": "burnitoken",
  "snyk.scanningMode": "manual",
  "snyk.additionalParameters": "--all-projects --detection-depth=3",
  "snyk.snykCodeSecurity": true,
  "snyk.snykCodeQuality": true,
  "snyk.features.showcaseFilesWithAnyVulnerability": true,
  "snyk.autoScan.enabled": false,
  "github.gitAuthentication": true,
  "github.dependabot.webview": true,
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/node_modules": true,
    "**/coverage": true,
    "**/playwright-report": true,
    "**/test-results": true,
    "**/*.log": true
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/coverage": true
  },
  "files.watcherExclude": {
    "**/node_modules/**": true,
    "**/coverage/**": true,
    "**/public/**": true
  },
  "typescript.validate.enable": false,
  "javascript.validate.enable": false,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true,
    "source.organizeImports": true
  },
  "eslint.validate": [
    "javascript"
  ],
  "problems.limit": 150,
  "explorer.compactFolders": false,
  "editor.formatOnSave": true,
  "eslint.alwaysShowStatus": true,
  "eslint.format.enable": true,
  "playwright.showTrace": true,
  "playwright.reuseBrowser": true,
  "github-actions.workflows.pinned.refresh.enabled": true,
  "github-actions.workflows.pinned.refresh.interval": 300,
  "axe.enableAccessibilityTree": true,
  "axe.enabledRules": [
    "all"
  ],
  "thunder-client.saveToWorkspace": true,
  "thunder-client.followRedirect": true,
  "burnitoken.autoHeal.enabled": true,
  "burnitoken.autoHeal.interval": 30000,
  "burnitoken.monitoring.realtime": true
}