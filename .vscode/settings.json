{
  "tailwindCSS.includeLanguages": {
    "html": "html",
    "javascript": "javascript",
    "css": "css"
  },
  "prettier.enable": true,
  "prettier.singleQuote": true,
  "prettier.semi": true,
  "prettier.tabWidth": 2,
  "liveServer.settings.donotShowInfoMsg": true,
  "liveServer.settings.donotVerifyTags": true,
  "liveServer.settings.port": 5500,
  "html.validate.scripts": true,
  "html.validate.styles": true,
  "css.validate": true,
  "accessibility.focusVisible": true,
  "accessibility.reduceMotion": "auto",
  "git.enableSmartCommit": true,
  "git.autofetch": true,
  "git.confirmSync": false,
  "github.copilot.enable": {
    "*": true,
    "yaml": false,
    "plaintext": false
  },
  "markdown.preview.fontSize": 14,
  "markdown.preview.lineHeight": 1.6,
  "extensions.autoUpdate": true,
  "task.allowAutomaticTasks": "on",
  "extensions.ignoreRecommendations": false,
  "prettier.requireConfig": false,
  "prettier.htmlWhitespaceSensitivity": "css",
  "eslint.rules.max-len": "off",
  "snyk.advanced.organization": "burnitoken",
  "snyk.scanningMode": "manual",
  "snyk.additionalParameters": "--all-projects --detection-depth=3",
  "snyk.snykCodeSecurity": true,
  "snyk.snykCodeQuality": true,
  "snyk.features.showcaseFilesWithAnyVulnerability": true,
  "snyk.autoScan.enabled": false,
  "github.gitAuthentication": true,
  "github.dependabot.webview": true,
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/node_modules": true,
    "**/coverage": true,
    "**/playwright-report": true,
    "**/test-results": true,
    "**/*.log": true
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/*.code-search": true,
    "**/coverage": true,
    "**/playwright-report": true,
    "**/test-results": true,
    "**/dist": true,
    "**/*.min.*": true
  },
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/**": true,
    "**/coverage/**": true,
    "**/playwright-report/**": true,
    "**/test-results/**": true,
    "**/dist/**": true
  },
  "typescript.validate.enable": false,
  "javascript.validate.enable": false,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  "eslint.validate": [
    "javascript"
  ],
  "problems.limit": 150,
  "explorer.compactFolders": false
}