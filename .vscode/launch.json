{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [        {
            "name": "üåê Debug Live Website (Chrome)",
            "type": "chrome",
            "request": "launch",
            "url": "https://burnitoken.website",
            "webRoot": "${workspaceFolder}",
            "sourceMaps": true,
            "trace": true
        },
        {
            "name": "üîç Debug Local HTML (Chrome)",
            "type": "chrome",
            "request": "launch",
            "file": "${workspaceFolder}/index.html",
            "webRoot": "${workspaceFolder}",
            "sourceMaps": true
        },
        {
            "name": "üîß Attach to Chrome Debugger",
            "port": 9222,
            "request": "attach",
            "type": "chrome",
            "webRoot": "${workspaceFolder}",
            "trace": true
        },
        {
            "name": "üìú Debug Node.js Scripts",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/main.js",
            "console": "integratedTerminal",
            "skipFiles": ["<node_internals>/**"]
        },
        {
            "name": "üß™ Debug Jest Tests",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/node_modules/.bin/jest",
            "args": ["--runInBand", "--detectOpenHandles"],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "skipFiles": ["<node_internals>/**"]
        },
        {
            "name": "üéØ Debug Audit Scripts",
            "type": "node", 
            "request": "launch",
            "program": "${workspaceFolder}/scripts/comprehensive-live-audit.js",
            "console": "integratedTerminal",
            "skipFiles": ["<node_internals>/**"]
        },
        {
            "name": "üöÄ Debug with Performance Profiling",
            "type": "chrome",
            "request": "launch",
            "url": "https://burnitoken.website",
            "webRoot": "${workspaceFolder}",
            "userDataDir": false,
            "runtimeArgs": [
                "--auto-open-devtools-for-tabs",
                "--enable-logging",
                "--log-level=0"
            ]
        }
    ]
}