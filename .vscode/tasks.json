{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Format & Lint All",
      "type": "shell",
      "command": "npm",
      "args": [
        "run",
        "format",
        "&&",
        "npm",
        "run",
        "lint",
        "--",
        "--fix"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "Lighthouse Audit",
      "type": "shell",
      "command": "npm",
      "args": [
        "run",
        "lighthouse"
      ],
      "group": "test",
      "isBackground": true
    },
    {
      "label": "Accessibility Audit",
      "type": "shell",
      "command": "npm",
      "args": [
        "run",
        "test:a11y"
      ],
      "group": "test"
    },
    {
      "label": "Deploy Check",
      "type": "shell",
      "command": "node",
      "args": [
        ".github/update-deploy-history.js",
        "--validation"
      ],
      "group": "build"
    },
    {
      "label": "API Health Check",
      "type": "shell",
      "command": "node",
      "args": [
        "tools/api-health-check.js"
      ],
      "group": "test"
    },
    {
      "label": "Security Scan",
      "type": "shell",
      "command": "npm",
      "args": [
        "audit",
        "&&",
        "snyk",
        "test"
      ],
      "group": "test"
    },
    {
      "label": "Auto-Heal All",
      "type": "shell",
      "command": "node",
      "args": [
        "tools/extension-orchestrator.js",
        "--auto-heal"
      ],
      "isBackground": true,
      "group": "build"
    },
    {
      "label": "Start Burni Dashboard",
      "type": "shell",
      "command": "node",
      "args": [
        "tools/dashboard-auto-starter.js"
      ],
      "isBackground": true,
      "presentation": {
        "reveal": "silent",
        "panel": "dedicated",
        "group": "monitoring"
      },
      "runOptions": {
        "runOn": "folderOpen"
      }
    }
  ]
}