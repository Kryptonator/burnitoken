{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "üîÑ Automatic Extension Check",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-NoProfile",
        "-Command",
        "Write-Host 'üîç Performing automatic extension check...' -ForegroundColor Blue; node extension-function-validator.js > $null; Write-Host '‚úÖ Extensions ready!' -ForegroundColor Green"
      ],
      "presentation": {
        "reveal": "silent",
        "close": true
      },
      "runOptions": {
        "runOn": "folderOpen"
      },
      "problemMatcher": []
    },
    {
      "label": "Extension Health Check",
