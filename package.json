{
  "name": "burni-website",
  "version": "1.0.0",
  "scripts": {
    "dev": "cross-env NODE_ENV=development tailwindcss -i ./assets/css/critical.css -o ./assets/css/styles.min.css --watch",
    "build:css": "cross-env NODE_ENV=production tailwindcss -i ./assets/css/critical.css -o ./assets/css/styles.min.css --minify",
    "serve": "http-server . -p 8080 --config http-server.config.json",
    "build": "npm run build:css && echo Build erfolgreich abgeschlossen!",
    "start": "npm run build && npm run serve",
    "clean": "del-cli assets/css/*.min.css",
    "lint": "prettier --write \"**/*.{html,css,js}\" --ignore-path .gitignore",
    "lint:check": "prettier --check \"**/*.{html,css,js}\" --ignore-path .gitignore",
    "test": "jest",
    "test:unit": "jest",
    "test:e2e": "start-server-and-test start http://localhost:8080 playwright test e2e/",
    "test:e2e:install": "playwright install",
    "lighthouse": "lhci autorun",
    "validate": "html-validate index.html 404.html",
    "optimize": "npm run clean && npm run build && npm run lint",
    "ci": "npm run lint:check && npm run test:unit && npm run build && npm run lighthouse && npm run test:e2e",
    "build:webpack": "webpack --mode production",
    "start:webpack": "webpack serve --open",
    "qa:watch": "node scripts/qa-watch.js",
    "audit": "npm audit --audit-level=moderate || true",
    "snyk:test": "snyk test || true",
    "lighthouse:ci": "lhci autorun",
    "ci:full": "npm run lint:check && npm run test:unit && npm run build && npm run lighthouse:ci && npm run test:e2e && npm run audit",
    "test:alert": "node tools/test-email-alert.js",
    "test:alert:dry": "node tools/test-email-alert.js --use-ethereal"
  },
  "devDependencies": {
    "@babel/core": "^7.24.0",
    "@babel/preset-env": "^7.24.0",
    "@lhci/cli": "^0.15.0",
    "@playwright/test": "^1.53.0",
    "@sentry/browser": "^9.29.0",
    "autoprefixer": "^10.4.21",
    "babel-loader": "^9.1.3",
    "cross-env": "^7.0.3",
    "css-loader": "^6.8.1",
    "cssnano": "^7.0.7",
    "del-cli": "^6.0.0",
    "dotenv": "^16.5.0",
    "html-validate": "^9.6.1",
    "http-server": "^14.1.1",
    "jest": "^30.0.0",
    "jest-environment-jsdom": "^30.0.0",
    "jsdom": "^26.1.0",
    "mini-css-extract-plugin": "^2.7.6",
    "nodemailer": "^7.0.3",
    "postcss": "^8.5.5",
    "prettier": "^3.2.0",
    "rimraf": "^6.0.1",
    "start-server-and-test": "^2.0.12",
    "tailwindcss": "^3.4.17",
    "wait-on": "^8.0.3",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.0.4"
  },
  "dependencies": {
    "@axe-core/webdriverjs": "^4.10.2",
    "axe-playwright": "^2.1.0",
    "canvas": "^3.1.1",
    "chrome-launcher": "^1.2.0",
    "lighthouse": "^12.6.1",
    "selenium-webdriver": "^4.33.0"
  }
}
