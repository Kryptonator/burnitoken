{
  "name": "burni-website",
  "version": "1.0.0",
  "scripts": {
    "dev": "cross-env NODE_ENV=development tailwindcss -i ./assets/css/critical.css -o ./assets/css/styles.min.css --watch",
    "build:css": "cross-env NODE_ENV=production tailwindcss -i ./assets/css/critical.css -o ./assets/css/styles.min.css --minify",
    "serve": "http-server . -p 8080 --config http-server.config.json",
    "build": "npm run build:css && echo Build erfolgreich abgeschlossen!",
    "build:prod": "npm run build:css && npm run optimize:assets && npm run validate && npm run generate:sitemap",
    "build:feature": "npm run build:css && echo Feature-Branch-Build abgeschlossen!",
    "start": "npm run build && npm run serve",
    "clean": "del-cli assets/css/*.min.css",
    "lint": "eslint . --fix",
    "lint:check": "eslint .",
    "lint:report": "eslint . --format json --output-file lint-results.json || true",
    "test": "jest",
    "test:unit": "jest",
    "test:e2e": "start-server-and-test start http://localhost:8080 playwright test e2e/",
    "test:e2e:ci": "playwright test --reporter=json,html",
    "test:e2e:install": "playwright install",
    "lighthouse": "lhci autorun",
    "validate": "html-validate index.html 404.html",
    "optimize": "npm run clean && npm run build && npm run lint",
    "optimize:assets": "node tools/optimize-assets.js",
    "ci": "npm run lint:check && npm run test:unit && npm run build && npm run lighthouse && npm run test:e2e",
    "build:webpack": "webpack --mode production",
    "start:webpack": "webpack serve --open",
    "qa:watch": "node scripts/qa-watch.js",
    "audit": "npm audit --audit-level=moderate || true",
    "snyk:test": "snyk test || true",
    "snyk:monitor": "snyk monitor || true",
    "snyk:code": "snyk code test || true",
    "snyk:full": "node tools/enhanced-security-manager.js --full --report || true",
    "snyk:backup": "node tools/snyk-auto-backup.js",
    "snyk:backup:list": "node tools/snyk-auto-backup.js --list",
    "snyk:backup:restore": "node tools/snyk-auto-backup.js --restore",
    "security": "npm run snyk:backup && npm run audit && npm run snyk:test && npm run snyk:code",
    "lighthouse:ci": "lhci autorun",
    "ci:full": "npm run lint:check && npm run test:unit && npm run build && npm run lighthouse:ci && npm run test:e2e && npm run audit",
    "generate:sitemap": "node tools/generate-sitemap.js",
    "validate:sitemap": "node tools/validate-sitemap.js",
    "gsc:diagnose": "node tools/gsc-status-check.js --status=notfetchable",
    "gsc:status": "node tools/gsc-status-check.js",
    "gsc:auth": "node tools/gsc-auth-check.js",
    "gsc:monitor": "node tools/gsc-integration-monitor.js",
    "gsc:monitor:v2": "node tools/gsc-integration-monitor-v2.js",
    "gsc:monitor:fix": "node tools/gsc-integration-monitor-v2.js --fix",
    "gsc:test": "node tools/gsc-quick-test.js --test",
    "gsc:performance": "node tools/gsc-performance-data.js",
    "gsc:keywords": "node tools/gsc-keywords-report.js",
    "gsc:crawl": "node tools/gsc-crawl-stats.js",
    "gsc:fix": "node tools/gsc-tools-fixer.js",
    "gsc:fix:v2": "node tools/gsc-tools-fixer-v2.js",
    "gsc:sitemap:fix": "node tools/fix-sitemap-gsc-issue.js",
    "monitor": "node tools/unified-monitoring-service.js",
    "monitor:once": "node tools/unified-monitoring-service.js --once",
    "monitor:check": "node tools/unified-monitoring-service.js --check",
    "recovery": "node tools/auto-recovery-system.js",
    "recovery:once": "node tools/auto-recovery-system.js --once",
    "recovery:force": "node tools/auto-recovery-system.js --force",
    "recovery:disable": "node tools/auto-recovery-system.js --disable",
    "status:master": "node tools/master-status-dashboard.js",
    "status:full-refresh": "node tools/master-status-dashboard.js --full-refresh",
    "gsc:sitemap:monitor": "node tools/gsc-status-check.js --monitor-sitemap",
    "test:alert": "node tools/test-email-alert.js",
    "test:alert:dry": "node tools/test-email-alert.js --use-ethereal",
    "cloud:sync": "node tools/update-cloud-settings.js",
    "status:dashboard": "node tools/extension-status-dashboard.js",
    "status:all": "node tools/comprehensive-monitor-dashboard.js",
    "status:unified": "node tools/unified-status-manager.js",
    "extension:restart": "node tools/extension-auto-restart.js",
    "extension:restart:simple": "node tools/simple-auto-restart.js",
    "extension:health": "node extension-function-validator.js",
    "status:simple": "node tools/simple-status.js",
    "ai:restart": "node tools/ai-services-manager.js restart",
    "ai:status": "node tools/ai-status.js",
    "cicd": "node tools/ci-cd-automation.js",
    "cicd:test": "node tools/ci-cd-automation.js --test-only",
    "auto:commit": "node tools/auto-commit-push.js",
    "monitor:full": "node tools/comprehensive-monitor-dashboard.js",
    "dev:functions": "netlify functions:serve",
    "prepare": "husky install"
  },
  "lint-staged": {
    "**/*.{html,css,js,json,md}": "prettier --write"
  },
  "devDependencies": {
    "@babel/core": "^7.24.0",
    "@babel/preset-env": "^7.24.0",
    "@lhci/cli": "^0.15.0",
    "@playwright/test": "^1.53.0",
    "@sentry/browser": "^9.29.0",
    "@xmldom/xmldom": "^0.9.8",
    "autoprefixer": "^10.4.21",
    "babel-loader": "^9.1.3",
    "cross-env": "^7.0.3",
    "css-loader": "^6.8.1",
    "cssnano": "^7.0.7",
    "del-cli": "^6.0.0",
    "dotenv": "^16.5.0",
    "eslint": "^9.29.0",
    "eslint-config-prettier": "^10.1.5",
    "html-validate": "^9.6.1",
    "http-server": "^14.1.1",
    "husky": "^8.0.0",
    "jest": "^30.0.0",
    "jest-environment-jsdom": "^30.0.0",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.1.2",
    "mini-css-extract-plugin": "^2.7.6",
    "nodemailer": "^7.0.3",
    "postcss": "^8.5.5",
    "prettier": "^3.2.0",
    "rimraf": "^6.0.1",
    "snyk": "^1.1297.2",
    "start-server-and-test": "^2.0.12",
    "tailwindcss": "^4.1.10",
    "wait-on": "^8.0.3",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  },
  "overrides": {
    "fastify": "4.29.1",
    "http-proxy-middleware": "2.0.9"
  },
  "dependencies": {
    "googleapis": "^150.0.1"
  }
}
